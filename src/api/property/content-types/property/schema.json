{
  "kind": "collectionType",
  "collectionName": "properties",
  "info": {
    "singularName": "property",
    "pluralName": "properties",
    "displayName": "property",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "date": {
      "type": "date",
      "required": true
    },
    "room": {
      "type": "integer",
      "default": 3,
      "min": 1
    },
    "kitchen": {
      "type": "integer",
      "min": 1,
      "default": 1
    },
    "bathroom": {
      "type": "integer",
      "default": 1,
      "min": 1
    },
    "imageGroup": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "locationName": {
      "type": "text",
      "required": true
    },
    "info": {
      "type": "customField",
      "default": "[]",
      "options": [
        "Kitchen",
        "Heating",
        "Oven",
        "Washer",
        "Luggage dropoff allowed",
        "Dishwasher",
        "Iron",
        "Refrigerator",
        "Dishes and silverware",
        "Long term stays allowed",
        "Essentials",
        "Microwave",
        "Stove",
        "Wireless Internet",
        "Hair dryer",
        "",
        ""
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "locationGoogleMap": {
      "type": "text",
      "required": true
    },
    "NumPerson": {
      "type": "integer",
      "required": true
    },
    "city": {
      "type": "customField",
      "default": "[]",
      "options": [
        "cairo",
        "london",
        "new york",
        "paris",
        "tokyo",
        "dubai",
        "rome",
        "sydney",
        "moscow",
        "singapore",
        "berlin",
        "beijing"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "landlords": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::landlord.landlord",
      "inversedBy": "properties"
    }
  }
}
